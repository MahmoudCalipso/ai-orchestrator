# =========================
# AI Orchestrator Environment Configuration
# =========================

# =========================
# Security & Authentication
# =========================

# JWT Configuration
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Master Encryption Key
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# =========================
# Database Configuration
# =========================

DATABASE_URL=postgresql://user:password@localhost:5432/ai_orchestrator

# =========================
# Redis Configuration
# =========================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB_AUTH=0      # For authentication tokens
REDIS_DB_CACHE=2     # For caching
REDIS_DB_RATE_LIMIT=1  # For rate limiting

# =========================
# Billing & Payments
# =========================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =========================
# LLM Configuration
# =========================

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen2.5-coder:7b

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# =========================
# Storage Configuration
# =========================

STORAGE_BASE_PATH=storage
MAX_UPLOAD_SIZE_MB=100

# =========================
# Git Integration
# =========================

# GitHub
GITHUB_TOKEN=your-github-token
GITHUB_USERNAME=ammarmahmoud1996@gmail.com

# GitLab
GITLAB_TOKEN=your-gitlab-token
GITLAB_USERNAME=ammarmahmoud1996@gmail.com

# Bitbucket
BITBUCKET_TOKEN=your-bitbucket-token
BITBUCKET_USERNAME=ammarmahmoud1996@gmail.com

# =========================
# Docker & Kubernetes
# =========================

DOCKER_HOST=unix:///var/run/docker.sock
KUBERNETES_CONFIG_PATH=~/.kube/config

# =========================
# Monitoring & Observability
# =========================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ai-orchestrator

# Prometheus
PROMETHEUS_PORT=8000

# =========================
# Email Configuration
# =========================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@ai-orchestrator.com

# =========================
# Application Configuration
# =========================

APP_NAME=AI Orchestrator
APP_VERSION=2.0.0
APP_ENV=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================
# Feature Flags
# =========================

ENABLE_SWARM_AGENTS=true
ENABLE_KUBERNETES=true
ENABLE_FIGMA_INTEGRATION=true
ENABLE_COLLABORATION=true
ENABLE_MARKETPLACE=true
